<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              tools:context="com.grgbanking.ct.activity.SaveQRCodeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/save_qr__back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="@string/button_back"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/bank_task_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="未用二维码统计"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/save_qr_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="清除"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>
    <ListView
        android:id="@+id/save_qrcode_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/light_grey"
        android:dividerHeight="1dp">

    </ListView>

    <Button
        android:id="@+id/save_btn_scan_qrcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:textColor="@color/white"
        android:background="@drawable/shape"
        android:text="@string/scan_QR_code"/>

    <Button
        android:id="@+id/save_btn_save_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:textColor="@color/white"
        android:background="@drawable/shape"
        android:text="@string/save_data"/>

</LinearLayout>
